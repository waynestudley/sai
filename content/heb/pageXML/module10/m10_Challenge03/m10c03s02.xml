			<stripCallOut align="" isThoughtbubble="" stripNonBg="true" showArrow="false" bColor="#0158A6" color="#FFFFFF" textAlign="center">
				<callOut minwidth="700" minheight="550" x="67" y="260" width="200" />
				<text><![CDATA[<span style="font-weight: bold;">רפי</span>, הנהלת הבניין]]></text>			
			</stripCallOut>
		</strip>
		
		<strip id="2">
			<stripThumImg numberText="2">
				<img path="content/images/rtl/module10/m10c03/m10c03s02/Page_02_Tumb_02.png" minwidth="700" minheight="550" />
				<title><![CDATA[]]></title>
